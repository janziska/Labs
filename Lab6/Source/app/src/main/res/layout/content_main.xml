<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="tutorial.maps.google.googlemapsapplication.MainActivity"
    tools:showIn="@layout/activity_main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Locate me"
        android:id="@+id/main_btn_maps"
        android:onClick="onClickOfMapButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="77dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameText"
        android:layout_alignParentTop="true"
        android:paddingTop="30dp"
        android:hint="Name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/userText"
        android:paddingTop="30dp"
        android:hint="Username"
        android:layout_below="@+id/nameText"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/main_btn_photo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/pwordText"
        android:paddingTop="30dp"
        android:hint="Password"
        android:layout_below="@+id/userText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/cpwordText"
        android:paddingTop="30dp"
        android:hint="Confirm Password"
        android:layout_below="@+id/pwordText"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/emailText"
        android:paddingTop="30dp"
        android:hint="Email"
        android:layout_below="@+id/postalText"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/postalText" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/postalText"
        android:paddingTop="30dp"
        android:hint="Mailing Address"
        android:layout_below="@+id/cpwordText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:id="@+id/main_btn_photo"
        android:onClick="onClickOfPhotoButton"
        android:layout_above="@+id/cpwordText"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/main_btn_maps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Your Photo"
        android:id="@+id/textView"
        android:textAlignment="center"
        android:textColor="#060606"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/cpwordText"
        android:layout_alignStart="@+id/main_btn_photo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Click to Take"
        android:id="@+id/textView2"
        android:textAlignment="center"
        android:textColor="#060606"
        android:layout_above="@+id/textView"
        android:layout_alignEnd="@+id/main_btn_photo"
        android:layout_alignStart="@+id/main_btn_photo"
        android:layout_below="@+id/userText" />
</RelativeLayout>
